{% sw_extends '@Storefront/storefront/layout/cookie/cookie-permission.html.twig' %}

{% block layout_cookie_permission_inner %}
    {% set acceptAllCookies = config('core.basicInformation.acceptAllCookies') %}

    <div class="modal fade show" tabindex="-1" data-cookie-permission="true">
        <div class="modal-dialog modal-lg modal-dialog-centered dewa-modal-cookies">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><span class="fi-rs-cookie"></span> {{ 'cookie.headline' | trans }}</h5>
                </div>
                <div class="modal-body">
                    {% block layout_cookie_permission_inner_content %}
                        {{ parent() }}
                    {% endblock %}
                </div>
                <div class="modal-footer">
                    {% block layout_cookie_permission_inner_button %}
                        {% block layout_cookie_permission_inner_button_deny %}
                            <span class="cookie-permission-button js-cookie-permission-button">
                                    <button
                                        type="submit"
                                        class="btn btn-link btn-sm">
                                        {{ "cookie.deny"|trans|sw_sanitize }}
                                    </button>
                                </span>
                        {% endblock %}

                        {% block layout_cookie_permission_inner_button_configuration %}
                            <span class="js-cookie-configuration-button">
                                <button
                                    type="submit"
                                    class="btn {{ acceptAllCookies ? 'btn-link btn-sm' : 'btn-primary' }}">
                                    {{ "cookie.configure"|trans|sw_sanitize }}
                                </button>
                            </span>
                        {% endblock %}

                        {% if acceptAllCookies %}
                            {% block layout_cookie_permission_inner_button_accept_all %}
                                {{ parent() }}
                            {% endblock %}
                        {% endif %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
