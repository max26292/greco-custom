{% sw_extends '@Storefront/storefront/layout/header/header.html.twig' %}



{% block layout_header %}

    {% block layout_top_bar %}{% endblock %}

    {% block layout_header_navigation %}
        <div class="row align-items-center header-row">
            {% block layout_header_logo %}
                <div class="col-12 col-md-6 col-xl-auto order-2 header-logo-col">
                    {% sw_include '@Storefront/storefront/layout/header/logo.html.twig' %}
                </div>
            {% endblock %}

            {% block layout_header_search %}{% endblock %}

            {% block dewa_layout_header_navigation %}
                <div class="col-12 order-3 order-xl-2 col-xl">
                    <div class="nav-main">

                        {% if page.controllerAction !== "home" %}
                        {% sw_include '@Storefront/storefront/layout/navigation/navigation.html.twig' %}
                        {% endif %}


                    </div>
                </div>
            {% endblock %}

            {% block layout_header_actions %}
                <div class="col-12 col-md-6 col-xl-auto order-1 order-xl-3 header-actions-col">
                    <div class="row no-gutters justify-content-end">
                     

                        {% block layout_header_search_toggle %}
                            {# <div class="col-auto">
                                <button data-toggle="modal"
                                        data-target="#dewaSearchModal"
                                        class="btn header-actions-btn js-search-toggle-btn"
                                        type="button"
                                        aria-label="{{ "header.searchButton"|trans|striptags }}">
                                    <span class="fi-rs-search"></span>
                                </button>
                            </div> #}
                        {% endblock %}

                        {% block dewa_layout_header_actions_shop %}
                            {# <div class="col-auto">
                                <button data-dewa-modal="{{ path('dewa-shop.shop-selection-modal') }}"
                                        data-target="#dewaModal"
                                        {% if 'shopinfo' in theme_config('dewa-header-fixed-elements') %}data-dewa-sticky-item{% endif %}
                                        class="btn header-actions-btn js-dewa-sticky-contact"
                                        type="button"
                                        aria-label="{{ "dewa-shop.checkout.shopSelection"|trans|striptags }}">
                                    <span class="fi-rs-shop"></span>
                                </button>
                            </div> #}
                        {% endblock %}

                        {% if config('core.cart.wishlistEnabled') %}
                            {% block layout_header_actions_wishlist %}
                                {{ parent() }}
                            {% endblock %}
                        {% endif %}

                        {% block dewa_layout_header_actions_language %}
                            {% if page.header.languages.count > 1 %}
                                <div class="col-auto d-none d-lg-block">
                                    {% sw_include '@Storefront/storefront/layout/header/actions/language-widget.html.twig' %}
                                </div>
                            {% endif %}
                        {% endblock %}
{# 
                        {% block dewa_layout_header_actions_currency %}
                            {% if page.header.currencies.count > 1 %}
                                <div class="col-auto d-none d-lg-block">
                                    {% sw_include '@Storefront/storefront/layout/header/actions/currency-widget.html.twig' %}
                                </div>
                            {% endif %}
                        {% endblock %} #}


                        <div class="col-auto d-flex account-group menu-button">

                            {% block layout_header_actions_account %}
                                {% if 'frontend.account.login.page' in activeRoute or 'frontend.account.register.page' in activeRoute %}
                                {% else %}
                                
                                        <div class="account-menu js-dewa-sticky-account" {% if 'account' in theme_config('dewa-header-fixed-elements') %}data-dewa-sticky-item{% endif %}>
                                            {% sw_include '@Storefront/storefront/layout/header/actions/account-widget.html.twig' %}
                                        </div>
                                {% endif %}
                            {% endblock %}

                            {% block layout_header_actions_cart %}
                            
                                    <div class="header-cart js-dewa-sticky-cart"
                                        {% if 'cart' in theme_config('dewa-header-fixed-elements') %}data-dewa-sticky-item{% endif %}
                                        data-offcanvas-cart="true">
                                        <a class="btn header-cart-btn header-actions-btn"
                                        href="{{ path('frontend.checkout.cart.page') }}"
                                        data-cart-widget="true"
                                        title="{{ 'checkout.cartTitle'|trans|striptags }}"
                                        aria-label="{{ 'checkout.cartTitle'|trans|striptags }}">
                                            {% sw_include '@Storefront/storefront/layout/header/actions/cart-widget.html.twig' %}
                                        </a>
                                    </div>
            
                            {% endblock %}

                        </div>


                        {% block layout_header_navigation_toggle %}
                        <div class="col-auto">
                            <div class="menu-button">
                                {% block layout_header_navigation_toggle_button %}
                                    <button class="btn nav-main-toggle-btn header-actions-btn"
                                            type="button"
                                            data-offcanvas-menu="true"
                                            aria-label="{{ "general.menuLink"|trans|striptags }}">
                                            <span class="pr-3">Menu</span>
                                            {% block layout_header_navigation_toggle_button_icon %}
                                                <span class="fi-rs-menu-burger"></span>
                                            {% endblock %}
                                    </button>
                                {% endblock %}
                            </div>
                        </div>
                        {% endblock %}


                    </div>
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
